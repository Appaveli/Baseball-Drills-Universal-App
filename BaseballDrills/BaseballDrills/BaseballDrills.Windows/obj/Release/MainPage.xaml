<Page
    x:Class="BaseballDrills.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaseballDrills"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/baseballplaybook.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="421,0,0,0" TextWrapping="Wrap" Text="Baseball Drills" VerticalAlignment="Top" FontSize="72" Foreground="White" FontFamily="Segoe WP Semibold" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="235,0,0,0" VerticalAlignment="Top" Width="150" Source="Assets/baseballIcon.png"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="901,10,0,0" VerticalAlignment="Top" Width="150" Source="Assets/baseballIcon.png"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="235,187,0,0" VerticalAlignment="Top" Width="150" Source="Assets/pitchstance.png"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="235,392,0,0" VerticalAlignment="Top" Width="150" Source="Assets/hitting-stance.png"/>
        <HyperlinkButton x:ConnectionId='1' Content="Pitch Count" HorizontalAlignment="Left" Margin="404,178,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="72" FontFamily="Segoe WP SemiLight"                              />
        <HyperlinkButton x:ConnectionId='2' Content="Swing Count" HorizontalAlignment="Left" Margin="404,383,0,0" VerticalAlignment="Top" Foreground="White" FontSize="72" FontFamily="Segoe WP SemiLight"                                />
    </Grid>
</Page>

